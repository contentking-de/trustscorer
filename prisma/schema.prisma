generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== NextAuth Models ====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  publisher     Publisher?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== Business Models ====================

enum Plan {
  FREE
  PRO
  BUSINESS
  ENTERPRISE
}

enum DomainVerificationStatus {
  PENDING
  VERIFIED
  FAILED
}

enum CertificationStatus {
  ACTIVE
  REVOKED
  EXPIRED
}

enum AuditStatus {
  PENDING
  UNDER_REVIEW
  CONFIRMED
  REJECTED
  BADGE_REVOKED
}

enum CreationProcess {
  HUMAN_WRITTEN
  AI_GENERATED_HUMAN_EDITED
  AI_ASSISTED_RESEARCH
  AI_ASSISTED_EDITING
  FULLY_AI_GENERATED
}

enum SourceType {
  PRIMARY_SOURCES
  SECONDARY_SOURCES
  EXPERT_KNOWLEDGE
  SOURCES_CITED
}

enum FactCheckType {
  INTERNAL_REVIEW
  EXTERNAL_FACTCHECK
  NO_FORMAL_FACTCHECK
}

model Publisher {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  companyName     String?
  contactName     String
  industry        String?
  website         String?
  imprintUrl      String?
  bio             String?  @db.Text

  plan            Plan     @default(FREE)
  stripeCustomerId String?
  stripeSubscriptionId String?

  domains         Domain[]
  authors         Author[]
  certifications  Certification[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Domain {
  id                  String   @id @default(cuid())
  publisherId         String
  publisher           Publisher @relation(fields: [publisherId], references: [id], onDelete: Cascade)

  domain              String
  verificationStatus  DomainVerificationStatus @default(PENDING)
  verificationToken   String   @unique @default(cuid())
  verificationMethod  String?  // "DNS" or "META"
  verifiedAt          DateTime?

  certifications      Certification[]

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@unique([publisherId, domain])
}

model Author {
  id              String   @id @default(cuid())
  publisherId     String
  publisher       Publisher @relation(fields: [publisherId], references: [id], onDelete: Cascade)

  name            String
  email           String?
  bio             String?  @db.Text
  verified        Boolean  @default(false)
  verifiedAt      DateTime?

  certifications  Certification[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([publisherId, email])
}

model Certification {
  id              String   @id @default(cuid())
  uniqueCode      String   @unique @default(cuid())

  publisherId     String
  publisher       Publisher @relation(fields: [publisherId], references: [id], onDelete: Cascade)

  domainId        String
  domain          Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)

  authorId        String?
  author          Author?  @relation(fields: [authorId], references: [id], onDelete: SetNull)

  // Content metadata
  contentUrl      String
  contentTitle    String?
  contentDescription String? @db.Text

  // Transparency declaration
  creationProcess CreationProcess[]
  aiToolsUsed     String?
  sourceTypes     SourceType[]
  factCheckType   FactCheckType[]
  additionalNotes String?  @db.Text

  // Evidence/Proof files
  evidenceUrls    String[]

  status          CertificationStatus @default(ACTIVE)
  revokedAt       DateTime?
  revokedReason   String?

  // Stats
  badgeImpressions Int     @default(0)
  badgeClicks      Int     @default(0)

  audits          Audit[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([publisherId])
  @@index([domainId])
  @@index([uniqueCode])
}

model Audit {
  id              String   @id @default(cuid())
  certificationId String
  certification   Certification @relation(fields: [certificationId], references: [id], onDelete: Cascade)

  reporterEmail   String?
  reporterIp      String?
  reason          String
  details         String?  @db.Text

  status          AuditStatus @default(PENDING)
  reviewNotes     String?  @db.Text
  reviewedAt      DateTime?
  reviewedBy      String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([certificationId])
}
